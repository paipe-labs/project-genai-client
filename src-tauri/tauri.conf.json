{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "broadcaster-client",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist":{
      "all": true,
      "shell": {
        "scope": [
          {
            "name": "ls",
            "cmd": "ls",
            "args": ["-la"]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.genai.network-demo",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "broadcaster-client",
        "width": 800,
        "height": 600
      }
    ]
  }
}
